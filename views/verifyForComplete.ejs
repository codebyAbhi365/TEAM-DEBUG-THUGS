<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Panel - Cleaning Requests | CleanCity</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            color: #333;
        }

        .sidebar {
            position: fixed;
            left: 0;
            top: 0;
            width: 280px;
            height: 100vh;
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(10px);
            box-shadow: 2px 0 20px rgba(0, 0, 0, 0.1);
            z-index: 1000;
            transition: all 0.3s ease;
        }

        .sidebar-header {
            padding: 2rem 1.5rem;
            border-bottom: 1px solid rgba(0, 0, 0, 0.1);
        }

        .logo {
            display: flex;
            align-items: center;
            font-size: 1.5rem;
            font-weight: bold;
            color: #00695c;
        }

        .logo i {
            margin-right: 10px;
            color: #4caf50;
            font-size: 1.8rem;
        }

        .sidebar-nav {
            padding: 1rem 0;
        }

        .nav-item {
            display: flex;
            align-items: center;
            padding: 1rem 1.5rem;
            color: #555;
            text-decoration: none;
            transition: all 0.3s ease;
            border-left: 3px solid transparent;
        }

        .nav-item:hover {
            background: rgba(76, 175, 80, 0.1);
            border-left-color: #4caf50;
            color: #00695c;
        }

        .nav-item i {
            margin-right: 12px;
            width: 20px;
            text-align: center;
        }

        .main-content {
            margin-left: 280px;
            padding: 2rem;
        }

        .header {
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(10px);
            padding: 1.5rem 2rem;
            border-radius: 15px;
            box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
            margin-bottom: 2rem;
        }

        .header h1 {
            color: #00695c;
            font-size: 2rem;
            margin-bottom: 0.5rem;
        }

        .header p {
            color: #666;
            font-size: 1.1rem;
        }

        .stats-container {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 1.5rem;
            margin-bottom: 2rem;
        }

        .stat-card {
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(10px);
            padding: 1.5rem;
            border-radius: 12px;
            box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
            text-align: center;
            transition: transform 0.3s ease;
        }

        .stat-card:hover {
            transform: translateY(-5px);
        }

        .stat-icon {
            font-size: 2.5rem;
            margin-bottom: 1rem;
        }

        .stat-icon.pending { color: #ff9800; }
        .stat-icon.approved { color: #4caf50; }
        .stat-icon.rejected { color: #f44336; }

        .stat-number {
            font-size: 2rem;
            font-weight: bold;
            color: #333;
            margin-bottom: 0.5rem;
        }

        .stat-label {
            color: #666;
            font-size: 0.9rem;
            text-transform: uppercase;
            letter-spacing: 1px;
        }

        .request-list {
            display: grid;
            gap: 1.5rem;
        }

        .request-card {
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(10px);
            border-radius: 15px;
            overflow: hidden;
            box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
            transition: all 0.3s ease;
            display: flex;
            align-items: stretch;
        }

        .request-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 12px 40px rgba(0, 0, 0, 0.15);
        }

        .request-image {
            width: 300px;
            height: 200px;
            overflow: hidden;
            position: relative;
        }

        .request-image img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            transition: transform 0.3s ease;
        }

        .request-card:hover .request-image img {
            transform: scale(1.05);
        }

        .status-badge {
            position: absolute;
            top: 10px;
            right: 10px;
            padding: 0.3rem 0.8rem;
            border-radius: 20px;
            font-size: 0.8rem;
            font-weight: bold;
            text-transform: uppercase;
            background: rgba(255, 152, 0, 0.9);
            color: white;
        }

        .request-info {
            padding: 1.5rem 2rem;
            flex: 1;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
        }

        .request-header {
            margin-bottom: 1rem;
        }

        .request-info h2 {
            color: #00695c;
            font-size: 1.4rem;
            margin-bottom: 0.5rem;
            display: flex;
            align-items: center;
        }

        .request-info h2 i {
            margin-right: 8px;
            color: #4caf50;
        }

        .request-meta {
            display: flex;
            gap: 1rem;
            margin-bottom: 1rem;
            font-size: 0.9rem;
            color: #666;
        }

        .meta-item {
            display: flex;
            align-items: center;
        }

        .meta-item i {
            margin-right: 5px;
            color: #4caf50;
        }

        .request-description {
            color: #555;
            line-height: 1.6;
            margin-bottom: 1.5rem;
            flex-grow: 1;
        }

        .request-actions {
            display: flex;
            gap: 1rem;
        }

        .action-btn {
            padding: 0.8rem 1.5rem;
            border: none;
            border-radius: 8px;
            cursor: pointer;
            font-weight: 600;
            transition: all 0.3s ease;
            display: flex;
            align-items: center;
            gap: 0.5rem;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            font-size: 0.9rem;
        }

        .accept-btn {
            background: linear-gradient(135deg, #4caf50, #66bb6a);
            color: white;
            flex: 1;
        }

        .accept-btn:hover {
            background: linear-gradient(135deg, #3d8b40, #4caf50);
            transform: translateY(-2px);
            box-shadow: 0 4px 15px rgba(76, 175, 80, 0.4);
        }

        .reject-btn {
            background: linear-gradient(135deg, #f44336, #ef5350);
            color: white;
            flex: 1;
        }

        .reject-btn:hover {
            background: linear-gradient(135deg, #d32f2f, #f44336);
            transform: translateY(-2px);
            box-shadow: 0 4px 15px rgba(244, 67, 54, 0.4);
        }

        .details-btn {
            background: linear-gradient(135deg, #2196f3, #42a5f5);
            color: white;
            padding: 0.6rem 1rem;
            font-size: 0.8rem;
        }

        .details-btn:hover {
            background: linear-gradient(135deg, #1976d2, #2196f3);
            transform: translateY(-2px);
            box-shadow: 0 4px 15px rgba(33, 150, 243, 0.4);
        }

        .priority-high {
            border-left: 4px solid #f44336;
        }

        .priority-medium {
            border-left: 4px solid #ff9800;
        }

        .priority-low {
            border-left: 4px solid #4caf50;
        }

        @media (max-width: 768px) {
            .sidebar {
                transform: translateX(-100%);
            }

            .main-content {
                margin-left: 0;
                padding: 1rem;
            }

            .request-card {
                flex-direction: column;
            }

            .request-image {
                width: 100%;
                height: 200px;
            }

            .request-actions {
                flex-direction: column;
            }

            .stats-container {
                grid-template-columns: 1fr;
            }
        }

        .loading {
            display: none;
            justify-content: center;
            align-items: center;
            padding: 2rem;
        }

        .spinner {
            width: 40px;
            height: 40px;
            border: 4px solid #f3f3f3;
            border-top: 4px solid #4caf50;
            border-radius: 50%;
            animation: spin 1s linear infinite;
        }

        @keyframes spin {
            0% { transform: rotate(0deg); }
            100% { transform: rotate(360deg); }
        }
    </style>
</head>

<body>
    <aside class="sidebar">
        <div class="sidebar-header">
            <div class="logo">
                <i class="fas fa-leaf"></i>
                CleanCity Admin
            </div>
        </div>
         <nav class="sidebar-nav">
            <a href="/admin" class="nav-item active">
                <i class="fas fa-clipboard-list"></i>
                Cleaning Requests
            </a>
            <a href="/completeVerify" class="nav-item">
                <i class="fas fa-chart-bar"></i>
                Verification Request
            </a>
            <a href="/home" class="nav-item">
                <i class="fas fa-home"></i>
                Home
            </a>
            
            <a href="#" class="nav-item">
                <i class="fas fa-users"></i>
                Volunteers
            </a>
            
            <a href="#" class="nav-item">
                <i class="fas fa-cog"></i>
                Settings
            </a>
        </nav>
    </aside>

    <main class="main-content">
        <div class="header">
            <h1><i class="fas fa-clipboard-check"></i> Cleaning Requests Dashboard</h1>
            <p>Manage and review community cleaning requests efficiently</p>
        </div>

        <div class="stats-container">
            <div class="stat-card">
                <div class="stat-icon pending">
                    <i class="fas fa-clock"></i>
                </div>
                <div class="stat-number"></div>
                <div class="stat-label">Pending Requests</div>
            </div>
            <div class="stat-card">
                <div class="stat-icon approved">
                    <i class="fas fa-check-circle"></i>
                </div>
                <div class="stat-number"></div>
                <div class="stat-label">Approved</div>
            </div>
            <div class="stat-card">
                <div class="stat-icon rejected">
                    <i class="fas fa-times-circle"></i>
                </div>
                <div class="stat-number"></div>
                <div class="stat-label">Rejected</div>
            </div>
        </div>

        <section class="request-list">
            <% accepted.complains.forEach(complain => { %>
                <% if (complain.status === 'task-submitted') { %>
                    <div class="request-card priority-high">
                    <div class="request-image">
                        <img src="/uploads/<%= complain.Image %>" alt="Complaint Image">
                        <div class="status-badge">Pending</div>
                    </div>
                    
                    <div class="request-info">  
                        <div class="request-header">
                        <h2><i class="fas fa-map-marker-alt"></i> <%= complain.Area %></h2>
                        <div class="request-meta">
                            <div class="meta-item">
                            <i class="fas fa-calendar"></i>
                            March 24, 2025
                            </div>
                            <div class="meta-item">
                            <i class="fas fa-user"></i>
                            <%= complain.Name %>
                            </div>
                            <div class="meta-item">
                            <i class="fas fa-exclamation-triangle"></i>
                            High Priority
                            </div>
                            
                        </div>
                        </div>
                        

                        <div class="request-actions">
                            <button onclick="location.href='/verify/details/<%= complain._id %>'">View Details</button>
                            <button class="action-btn accept-btn" onclick="approveComplaint('<%= complain._id %>')">
                                <i class="fas fa-check"></i> ✔ ACCEPT
                            </button>
                            <button class="action-btn reject-btn" onclick="rejectComplaint('<%= complain._id %>')">
                                <i class="fas fa-times"></i> ❌ REJECT
                            </button>
                        </div>
                    </div>
                    </div>
                <% } %>
                <% }) %>

        </section>

        <div class="loading" id="loading">
            <div class="spinner"></div>
        </div>
    </main>

    <script>
        function handleRequest(action, button) {
            const card = button.closest('.request-card');
            const statusBadge = card.querySelector('.status-badge');
            const actions = card.querySelector('.request-actions');
            
            // Show loading state
            button.disabled = true;
            button.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Processing...';
            
            // Simulate API call
            setTimeout(() => {
                if (action === 'accept') {
                    statusBadge.textContent = 'Approved';
                    statusBadge.style.background = 'rgba(76, 175, 80, 0.9)';
                    card.style.opacity = '0.7';
                    actions.innerHTML = '<span style="color: #4caf50; font-weight: bold;"><i class="fas fa-check-circle"></i> Request Approved</span>';
                } else {
                    statusBadge.textContent = 'Rejected';
                    statusBadge.style.background = 'rgba(244, 67, 54, 0.9)';
                    card.style.opacity = '0.7';
                    actions.innerHTML = '<span style="color: #f44336; font-weight: bold;"><i class="fas fa-times-circle"></i> Request Rejected</span>';
                }
                
                // Update stats (simplified)
                updateStats(action);
            }, 1500);
        }
        
         function approveComplaint(id) {
    fetch(`/complaint/${id}/accept`, {
      method: 'POST'
    })
    .then(response => {
      if (response.ok) {
        alert("Complaint marked as complete.");
        location.reload(); // or remove the element from DOM
      }
    })
    .catch(error => console.error(error));
  }


        function rejectComplaint(id) {
    fetch(`/complaint/${id}/reject`, {
      method: 'POST'
    })
    .then(response => {
      if (response.ok) {
        alert("Complaint rejected and deleted.");
        location.reload();
      }
    })
    .catch(error => console.error(error));
  }


        // Add some interactive effects
        document.querySelectorAll('.request-card').forEach(card => {
            card.addEventListener('mouseenter', () => {
                card.style.transform = 'translateY(-8px) scale(1.02)';
            });
            
            card.addEventListener('mouseleave', () => {
                card.style.transform = 'translateY(0) scale(1)';
            });
        });
    </script>
</body>

</html>