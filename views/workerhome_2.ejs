    <section class="container locations">
        <h2 class="section-title">
            <i class="fas fa-map-marker-alt"></i>
            Available Cleaning Locations
        </h2>

         <% complaints.forEach(complain => { %>
            <div class="location-card">
                <div class="location-image">
                    <img src="/uploads/<%= complain.Image %>" alt="Katraj Dairy Location">
                </div>
                <div class="location-info">
                    <div>
                        <div class="location-header">
                            <h3 class="location-title">
                                <i class="fas fa-exclamation-circle"></i>
                                <%= complain.Area %>
                            </h3>
                            <div class="location-date">
                                <i class="far fa-calendar-alt"></i>
                                Updated: 24/03/2025
                            </div>
                        </div>
                        <h2 class="location-title">
                            Complain Raiser: <%= complain.Name %>
                        </h2>
                        <br>
                        <h2 class="location">
                            Location:
                            <% 
                            const regex = /Lat:\s*(-?\d+\.?\d*),\s*Lon:\s*(-?\d+\.?\d*)/;
                            const match = complain.Location?.match(regex);
                            %>
                            <% if (match) { %>
                                <a 
                                href="https://www.google.com/maps?q=<%= match[1] %>,<%= match[2] %>" 
