<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cleaning Task | CleanCity</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;600;700&display=swap');

        :root {
            --primary: #00897b;
            --primary-dark: #00695c;
            --primary-light: #b2dfdb;
            --secondary: #4caf50;
            --accent: #ffc107;
            --light: #e8f5e9;
            --dark: #263238;
            --gray: #607d8b;
            --shadow: 0 4px 10px rgba(0, 105, 92, 0.15);
            --radius: 12px;
            --header-height: 80px;
            --footer-height: 120px;
        }
        
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Montserrat', sans-serif;
        }
        
        html, body {
            height: 100%;
        }
        
        body {
            display: flex;
            flex-direction: column;
            background-color: var(--light);
            color: var(--dark);

            background-image: 
                radial-gradient(circle at 10% 20%, rgba(178, 223, 219, 0.3) 0%, transparent 20%),
                radial-gradient(circle at 90% 80%, rgba(178, 223, 219, 0.3) 0%, transparent 20%),
                radial-gradient(circle at 50% 50%, rgba(178, 223, 219, 0.1) 0%, transparent 60%);
        }

        /* Main Content Area */
        .main-content {
            flex: 1;
            width: 100%;
            padding: 30px 0;
        }

        .content-container {
            max-width: 580px;
            width: 95%;
            margin: 0 auto;
            background: white;
            border-radius: var(--radius);
            box-shadow: var(--shadow);
            padding: 30px;
            animation: fadeIn 0.8s ease-out;
        }

        @keyframes fadeIn {
            from { opacity: 0; transform: translateY(20px); }
            to { opacity: 1; transform: translateY(0); }
        }

        /* Form Styles */
        .page-title {
            color: var(--primary-dark);
            font-size: 1.8rem;
            margin-bottom: 25px;
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .page-title i {
            color: var(--accent);
        }

        .form-container input {
            width: 100%;
            padding: 14px 16px;
            margin: 12px 0;
            border: 2px solid #e0e0e0;
            border-radius: var(--radius);
            font-size: 1rem;
            transition: all 0.3s ease;
        }

        .form-container input:focus {
            border-color: var(--primary);
            box-shadow: 0 0 0 3px rgba(0, 137, 123, 0.2);
            outline: none;
        }

        .form-container input::placeholder {
            color: var(--gray);
            opacity: 0.7;
        }

        .upload-section {
            display: flex;
            align-items: center;
            gap: 10px;
            margin: 15px 0;
        }

        .upload-section input[type="text"] {
            flex: 1;
            background: #f5f5f5;
            cursor: not-allowed;
        }

        .upload-btn {
            background: var(--primary-light);
            color: var(--primary-dark);
            border: none;
            padding: 12px 20px;
            border-radius: var(--radius);
            cursor: pointer;
            font-weight: 600;
            display: flex;
            align-items: center;
            gap: 8px;
            transition: all 0.3s ease;
        }

        .upload-btn:hover {
            background: var(--primary);
            color: white;
            transform: translateY(-2px);
            box-shadow: 0 4px 8px rgba(0, 105, 92, 0.2);
        }

        .upload-btn i {
            font-size: 1rem;
        }

        .upload-button {
            width: 100%;
            background: var(--secondary);
            color: white;
            border: none;
            padding: 16px;
            border-radius: var(--radius);
            font-size: 1.1rem;
            font-weight: 600;
            cursor: pointer;
            margin-top: 20px;
            transition: all 0.3s ease;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 10px;
        }

        .upload-button:hover {
            background: #388e3c;
            transform: translateY(-3px);
            box-shadow: 0 6px 15px rgba(76, 175, 80, 0.3);
        }

        /* Task List Styles */
        .complaints-container {
            max-height: 400px;
            overflow-y: auto;
            margin-top: 30px;
            padding: 15px;
            border-radius: var(--radius);
            background: #f5f5f5;
        }

        .task-card {
            background: white;
            padding: 20px;
            border-radius: var(--radius);
            margin-bottom: 20px;
            box-shadow: var(--shadow);
            display: flex;
            gap: 20px;
            transition: transform 0.3s ease;
        }

        .task-card:hover {
            transform: translateY(-5px);
        }

        .task-card img {
            width: 120px;
            height: 120px;
            object-fit: cover;
            border-radius: var(--radius);
            border: 2px solid var(--primary-light);
        }

        .task-info p {
            margin-bottom: 8px;
            color: var(--dark);
        }

        .task-info p i {
            color: var(--primary);
            margin-right: 8px;
            width: 20px;
            text-align: center;
        }

        .completed-btn {
            background: var(--secondary);
            color: white;
            padding: 10px 15px;
            border-radius: var(--radius);
            font-weight: 600;
            cursor: pointer;
            text-align: center;
            margin-top: 10px;
            transition: all 0.3s ease;
            display: inline-block;
        }

        .completed-btn:hover {
            background: #388e3c;
            box-shadow: 0 4px 8px rgba(76, 175, 80, 0.3);
        }

        /* Responsive Adjustments */
        @media (max-width: 768px) {
            :root {
                --header-height: 70px;
                --footer-height: 100px;
            }
            
            .content-container {
                padding: 20px;
            }
            
            .task-card {
                flex-direction: column;
                gap: 15px;
            }
            
            .task-card img {
                width: 100%;
                height: auto;
            }
        }

        @media (max-width: 480px) {
            :root {
                --header-height: 60px;
                --footer-height: 90px;
            }
            
            .page-title {
                font-size: 1.5rem;
            }
            
            .upload-section {
                flex-direction: column;
            }
            
            .upload-section input[type="text"] {
                width: 100%;
            }
        }
        </style>
</head>
<body>
    <%- include('partials/header_2') %>

    <main class="main-content">
        <div class="content-container">
            <h1 class="page-title">
                <i class="fas fa-broom"></i>
                Cleaning Task Submission
            </h1>
            
            <form action="/home/reward"  method="POST" enctype="multipart/form-data" onsubmit="updateCounter()">
            <div class="form-container">
                
                <input type="text" name="name" placeholder="Your Name">
                <input type="text"  name="taskId" placeholder="Task ID">
                <input type="text" name="location" placeholder="Address">

                <!-- Before Image -->
                <div class="upload-section">
                    <input type="file" name="beforeImage" id="beforeImage" accept="image/*" hidden>
                    <input type="text" id="beforeImageText" placeholder="Before Image" readonly>
                    <button type="button" class="upload-btn" onclick="document.getElementById('beforeImage').click()">
                        <i class="fas fa-camera"></i> Before Photo
                    </button>
                </div>

                <!-- After Image -->
                <div class="upload-section">
                    <input type="file" name="afterImage" id="afterImage" accept="image/*" hidden>
                    <input type="text" id="afterImageText" placeholder="After Image" readonly>
                    <button type="button" class="upload-btn" onclick="document.getElementById('afterImage').click()">
                        <i class="fas fa-camera"></i> After Photo
                    </button>
                </div>



                <input type="text" id="locationInput" name="livelocation" placeholder="Fetching your location..." readonly>
<button type="button" class="upload-btn" onclick="getLocation()">
    <i class="fas fa-map-marker-alt"></i> Get Live Location
</button>

                    <button type="submit" class="upload-button">
                        <i class="fas fa-cloud-upload-alt"></i> Submit Task
                    </button>
                </div>
            </form>

            <div class="complaints-container">
                <% accepted.forEach(element => { %>
                    <% if (element.status === "userAccepted" ) { %>
                        <div class="task-card">
                        <img src="/uploads/<%= element.Image %>" alt="Task Image">
                        <div class="task-info">
                            <p>
                                ID: <span class="copyId" style="cursor: pointer;" title="Click to copy"> <%= element.id %><i class="fas fa-copy"></i></span>

                            </p>
                            <p><i class="fas fa-user"></i> <%= element.Name %></p>
                            <p><i class="fas fa-map-marker-alt"></i> <%= element.Location %></p>
                            <div class="completed-btn">Mark Completed</div>
                            </div>
                        </div>
                    <% } %>
                <% }) %>
            </div>
        </div>
                



    </main>



    <%- include('partials/footer_2') %>

    <script>
        function updateCounter() {
            let count = localStorage.getItem("cleaningTasks") || 0;
            count = parseInt(count) + 1;
            localStorage.setItem("cleaningTasks", count);
        }

        // Update file input text when files are selected
        document.getElementById('beforeImage').addEventListener('change', function(e) {
            document.getElementById('beforeImageText').value = e.target.files[0].name;
        });

        document.getElementById('afterImage').addEventListener('change', function(e) {
            document.getElementById('afterImageText').value = e.target.files[0].name;
        });

        // Adjust content padding dynamically based on header/footer heights
        function adjustContentPadding() {
            const header = document.querySelector('header');
            const footer = document.querySelector('footer');
            
            if (header) {
                document.documentElement.style.setProperty(
                    '--header-height', 
                    `${header.offsetHeight}px`
                );
            }
            
            if (footer) {
                document.documentElement.style.setProperty(
                    '--footer-height', 
                    `${footer.offsetHeight}px`
                );
            }
        }


  function getLocation() {
    const locationInput = document.getElementById('locationInput');

    if (!navigator.geolocation) {
        locationInput.placeholder = "Geolocation not supported";
        return;
    }

    locationInput.placeholder = "Fetching location...";

    navigator.geolocation.getCurrentPosition(
        position => {
            const { latitude, longitude } = position.coords;
            locationInput.value = `Lat: ${latitude.toFixed(5)}, Lng: ${longitude.toFixed(5)}`;
        },
        error => {
            locationInput.placeholder = "Unable to fetch location";
        }
    );
}






        // Run on load and resize
        window.addEventListener('load', adjustContentPadding);
        window.addEventListener('resize', adjustContentPadding);

       document.addEventListener('DOMContentLoaded', () => {
  const copyIdSpans = document.querySelectorAll('.copyId');

  copyIdSpans.forEach(span => {
    span.addEventListener('click', () => {
      const idToCopy = span.textContent.trim();

      navigator.clipboard.writeText(idToCopy)
        .then(() => {
          alert('ID copied to clipboard!');
        })
        .catch(err => {
          console.error('Failed to copy ID:', err);
          alert('Failed to copy ID. Please copy manually.');
          fallbackCopyTextToClipboard(idToCopy);
        });
    });
  });
});
span.textContent = "Copied!";
setTimeout(() => {
  span.textContent = idToCopy;
}, 1000);

// Fallback function for older browsers (less common now, but good to have)
function fallbackCopyTextToClipboard(text) {
  const textArea = document.createElement("textarea");
  textArea.value = text;

  // Avoid scrolling to bottom
  textArea.style.top = "0";
  textArea.style.left = "0";
  textArea.style.position = "fixed";

  document.body.appendChild(textArea);
  textArea.focus();
  textArea.select();

  try {
    const successful = document.execCommand('copy');
    const msg = successful ? 'successful' : 'unsuccessful';
    console.log('Fallback: Copying text command was ' + msg);
  } catch (err) {
    console.error('Fallback: Oops, unable to copy', err);
  }

  document.body.removeChild(textArea);
}


    </script>
</body>
</html>