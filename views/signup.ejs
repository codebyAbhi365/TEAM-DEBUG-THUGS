<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>CleanCity | Sign Up</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;600;700&display=swap');

        :root {
            --primary: #00897b;
            --primary-dark: #00695c;
            --primary-light: #b2dfdb;
            --background: #e8f5e9;
            --white: #ffffff;
            --shadow: 0 8px 20px rgba(0, 105, 92, 0.15);
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Montserrat', sans-serif;
            background: var(--background);
            background-image: 
                radial-gradient(circle at 10% 20%, rgba(178, 223, 219, 0.3) 0%, transparent 20%),
                radial-gradient(circle at 90% 80%, rgba(178, 223, 219, 0.3) 0%, transparent 20%),
                radial-gradient(circle at 50% 50%, rgba(178, 223, 219, 0.1) 0%, transparent 60%);
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            padding: 20px;
        }

        .signup-container {
            background: var(--white);
            padding: 3rem;
            border-radius: 20px;
            box-shadow: var(--shadow);
            width: 100%;
            max-width: 450px;
            text-align: center;
            position: relative;
            overflow: hidden;
            animation: fadeIn 0.8s ease-out;
        }

        @keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(20px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .logo {
            width: 70px;
            height: 70px;
            background: var(--primary-light);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 1.5rem;
            color: var(--primary-dark);
            font-size: 2rem;
            box-shadow: 0 4px 10px rgba(0, 105, 92, 0.2);
            animation: pulse 2s infinite;
        }

        @keyframes pulse {
            0% {
                box-shadow: 0 0 0 0 rgba(0, 137, 123, 0.4);
            }
            70% {
                box-shadow: 0 0 0 10px rgba(0, 137, 123, 0);
            }
            100% {
                box-shadow: 0 0 0 0 rgba(0, 137, 123, 0);
            }
        }

        .signup-container h1 {
            margin-bottom: 0.5rem;
            font-weight: 600;
            font-size: 1.8rem;
            color: #333;
        }

        .signup-container span {
            color: var(--primary);
            font-weight: 700;
        }

        .signup-container p {
            color: #666;
            margin-bottom: 1.5rem;
        }

        .role-toggle {
            display: flex;
            justify-content: center;
            margin: 1.5rem 0;
            position: relative;
            background: #f5f5f5;
            border-radius: 30px;
            padding: 5px;
        }

        .role-btn {
            padding: 0.7rem 1.5rem;
            border: none;
            border-radius: 25px;
            background: transparent;
            cursor: pointer;
            font-weight: 600;
            transition: all 0.3s ease;
            position: relative;
            z-index: 1;
            flex: 1;
            font-family: 'Montserrat', sans-serif;
        }

        .role-btn.active {
            color: var(--white);
        }

        .toggle-slider {
            position: absolute;
            top: 5px;
            left: 5px;
            height: calc(100% - 10px);
            width: calc(50% - 5px);
            background: var(--primary);
            border-radius: 25px;
            transition: transform 0.4s cubic-bezier(0.68, -0.55, 0.27, 1.55);
        }

        .toggle-right {
            transform: translateX(calc(100% + 5px));
        }

        .signup-form {
            position: relative;
        }

        .input-group {
            position: relative;
            margin: 1.5rem 0;
        }

        .input-group input {
            width: 100%;
            padding: 1rem 1rem 1rem 3rem;
            border: 1px solid #e0e0e0;
            border-radius: 12px;
            font-size: 1rem;
            transition: all 0.3s;
            background: #f9f9f9;
            font-family: 'Montserrat', sans-serif;
        }

        .input-group input:focus {
            outline: none;
            border-color: var(--primary);
            box-shadow: 0 0 0 3px rgba(0, 137, 123, 0.2);
            background: white;
        }

        .input-group i {
            position: absolute;
            left: 1rem;
            top: 50%;
            transform: translateY(-50%);
            color: #999;
            transition: all 0.3s;
        }

        .input-group input:focus + i {
            color: var(--primary);
        }

        .password-requirements {
            text-align: left;
            background: #f5f5f5;
            padding: 12px 15px;
            border-radius: 8px;
            font-size: 0.85rem;
            margin-top: -10px;
            margin-bottom: 10px;
            color: #666;
            display: none;
        }

        .password-requirements.active {
            display: block;
            animation: fadeSlideDown 0.3s ease-out;
        }

        @keyframes fadeSlideDown {
            from {
                opacity: 0;
                transform: translateY(-10px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .password-requirements ul {
            margin: 5px 0 0 20px;
            padding: 0;
        }

        .password-requirements li {
            margin-bottom:.25rem;
        }

        .signup-btn {
            background: var(--primary);
            color: white;
            border: none;
            padding: 1rem;
            width: 100%;
            border-radius: 12px;
            font-size: 1rem;
            font-weight: 600;
            cursor: pointer;
            margin-top: 1.5rem;
            box-shadow: 0 4px 10px rgba(0, 105, 92, 0.2);
            transition: all 0.3s;
            font-family: 'Montserrat', sans-serif;
        }

        .signup-btn:hover {
            background: var(--primary-dark);
            box-shadow: 0 6px 15px rgba(0, 105, 92, 0.3);
            transform: translateY(-2px);
        }

        .signup-btn:active {
            transform: translateY(0);
            box-shadow: 0 2px 5px rgba(0, 105, 92, 0.2);
        }

        .note {
            font-size: 0.9rem;
            color: #777;
            margin-top: 2rem;
        }

        .note a {
            color: var(--primary);
            text-decoration: none;
            font-weight: 600;
            transition: color 0.3s;
        }

        .note a:hover {
            color: var(--primary-dark);
            text-decoration: underline;
        }

        .bg-shape {
            position: absolute;
            z-index: -1;
            opacity: 0.1;
        }

        .bg-shape-1 {
            top: -20px;
            left: -20px;
            width: 120px;
            height: 120px;
            background: var(--primary);
            border-radius: 30% 70% 70% 30% / 30% 30% 70% 70%;
        }

        .bg-shape-2 {
            bottom: -30px;
            right: -20px;
            width: 150px;
            height: 150px;
            background: var(--primary);
            border-radius: 63% 37% 54% 46% / 55% 48% 52% 45%;
        }

        .success-message {
            display: none;
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: var(--white);
            border-radius: 20px;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            z-index: 10;
        }

        .success-message.active {
            display: flex;
            animation: fadeIn 0.5s ease-out;
        }

        .success-icon {
            width: 80px;
            height: 80px;
            background: var(--primary-light);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin-bottom: 1.5rem;
            color: var(--primary-dark);
            font-size: 2.5rem;
        }

        @media (max-width: 480px) {
            .signup-container {
                padding: 2rem;
                border-radius: 15px;
            }

            .logo {
                width: 60px;
                height: 60px;
                font-size: 1.7rem;
            }

            .signup-container h1 {
                font-size: 1.5rem;
            }

            .role-btn {
                padding: 0.6rem 1rem;
                font-size: 0.9rem;
            }

            .input-group input {
                padding: 0.9rem 0.9rem 0.9rem 2.7rem;
                font-size: 0.95rem;
            }
        }
    </style>
</head>

<body>
    <div class="signup-container">
        <div class="bg-shape bg-shape-1"></div>
        <div class="bg-shape bg-shape-2"></div>
        
        <div class="logo">
            <i class="fas fa-leaf"></i>
        </div>
        <h1>Join <span>CleanCity</span></h1>
        <p>Create your account to get started</p>

        <div class="role-toggle">
            <button class="role-btn active" data-role="citizen">Citizen</button>
            <button class="role-btn" data-role="worker">Worker</button>
            <div class="toggle-slider"></div>
        </div>

        <form class="signup-form" method="POST" action="/signup">
            <div class="input-group">
                <input type="text" name="Name" id="fullname" placeholder="Full Name" required />
                <i class="fas fa-user"></i>
            </div>
            <div class="input-group">
                <input type="number" name="PhnNo" id="number" placeholder="Phone No." required />
                <i class="fas fa-phone"></i>
            </div>
            <div class="input-group">
                <input type="email" name="Email" id="Email" placeholder="Email Address" required />
                <i class="fas fa-envelope"></i>
            </div>
            <div class="input-group">
                <input type="password" name="Pass" id="Pass" placeholder="Create Password" required />
                <i class="fas fa-lock"></i>
            </div>
            
            <input type="hidden">
            <button type="submit" class="signup-btn">
                Create Account
            </button>
        </form>

        <p class="note">Already have an account? <a href="/login">Login here</a></p>
      <p class="note">Admin ? <a href="/loginAsAdmin">Admin Login</a></p>

        
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const roleButtons = document.querySelectorAll('.role-btn');
            const slider = document.querySelector('.toggle-slider');
            const userRoleInput = document.getElementById('user-role');
            
            // Role toggle functionality
            roleButtons.forEach(button => {
                button.addEventListener('click', function() {
                    // Remove active class from all buttons
                    roleButtons.forEach(btn => btn.classList.remove('active'));
                    
                    // Add active class to clicked button
                    this.classList.add('active');
                    
                    // Set the hidden input value
                    userRoleInput.value = this.dataset.role;
                    
                    // Move the slider
                    if (this.dataset.role === 'worker') {
                        slider.classList.add('toggle-right');
                    } else {
                        slider.classList.remove('toggle-right');
                    }
                });
            }); 

        });
    </script>
</body>

</html>