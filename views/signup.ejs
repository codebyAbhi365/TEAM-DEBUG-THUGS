<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Auth Pages</title>
    <style>
        body {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            background: linear-gradient(135deg, #8FBC8F, #556B2F);
            font-family: Arial, sans-serif;
            overflow: hidden;
            transition: background 1s ease-in-out;
        }
        .container {
            width: 250px;
            height: 500px;
            padding: 20px;
            background: white;
            border-radius: 40px;
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.3);
            text-align: center;
            position: absolute;
            animation: floatEffect 3s infinite alternate ease-in-out;
            display: flex;
            flex-direction: column;
            justify-content: center;
            transition: transform 0.5s ease-in-out, opacity 0.5s ease-in-out;
        }
        @keyframes floatEffect {
            from { transform: translateY(0); }
            to { transform: translateY(-10px); }
        }
        h2 {
            color: #556B2F;
            font-size: 22px;
            margin-bottom: 10px;
        }
        .input-container {
            position: relative;
            width: 90%;
            margin: 10px auto;
        }
        input {
            width: 100%;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 20px;
            transition: all 0.3s;
            outline: none;
        }
        input:focus {
            border-color: #556B2F;
            transform: scale(1.05);
        }
        .toggle-password {
            position: absolute;
            right: 10px;
            top: 50%;
            transform: translateY(-50%);
            cursor: pointer;
            color: #666;
        }
        button {
            width: 100%;
            padding: 10px;
            background: #556B2F;
            color: white;
            border: none;
            border-radius: 20px;
            cursor: pointer;
            font-weight: bold;
            transition: all 0.3s ease-in-out;
        }
        button:hover {
            background: #6B8E23;
            transform: translateY(-2px);
            box-shadow: 0 5px 10px rgba(0, 0, 0, 0.3);
        }
        p {
            margin-top: 10px;
            color: #556B2F;
            cursor: pointer;
            font-weight: bold;
        }
        .hidden {
            transform: translateY(-50px);
            opacity: 0;
        }
    </style>
</head>
<body>
    <div class="container" id="loginPage">
        <h2>Login</h2>
        <div class="input-container">
            <input type="email" placeholder="Email" >
        </div>
        <div class="input-container">
            <input type="password" id="password" placeholder="Password">
            <span class="toggle-password" onclick="togglePassword()">üëÅÔ∏è</span>
        </div>
        <button onclick="togglePage()">Login</button>
        <p onclick="togglePage()">Don't have an account? Sign Up</p>
    </div>
    
    <div class="container hidden" id="signupPage">
        <h2>Sign Up</h2>
        <div class="input-container">
            <input type="text" placeholder="Full Name" name="Name">
        </div>
        <div class="input-container" >
            <input type="email" placeholder="Email" name="Email">
        </div>
        <div class="input-container">
            <input type="password" id="signupPassword" placeholder="Password" name="Pass">
            <span class="toggle-password" onclick="togglePassword('signupPassword')">üëÅÔ∏è</span>
        </div>
        <div class="input-container">
            <input type="tel" placeholder="Mobile Number" name="PhnNo">
        </div>
        <div class="input-container">
            <input type="number" placeholder="Age">
        </div>
        <button onclick="togglePage()">Sign Up</button>
        <p onclick="togglePage()">Already have an account? Login</p>
    </div>
    
    <script>
        function togglePassword(id = "password") {
            var passwordField = document.getElementById(id);
            if (passwordField.type === "password") {
                passwordField.type = "text";
            } else {
                passwordField.type = "password";
            }
        }
        
        function togglePage() {
            var loginPage = document.getElementById("loginPage");
            var signupPage = document.getElementById("signupPage");
            
            if (loginPage.classList.contains("hidden")) {
                loginPage.classList.remove("hidden");
                signupPage.classList.add("hidden");
            } else {
                loginPage.classList.add("hidden");
                signupPage.classList.remove("hidden");
            }
        }
    </script>
</body>
</html>
