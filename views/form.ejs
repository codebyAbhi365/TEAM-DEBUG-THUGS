<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Report Garbage Area</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            background: #f0f2f5;
            margin: 0;
        }

        .form-container {
            background: white;
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            width: 90vh;
            max-width: 400px;
            height: 600px;
            background-image: url("/images/new\ img\ 02.png");
            background-size: cover;
            background-position: center;
        }

        h2 {
            text-align: center;
            margin-bottom: 25px;
            color: #333;
        }

        .form-group {
            margin-bottom: 20px; /* Added spacing between form elements */
        }

        label {
            font-size: 15px;
            font-weight: bold;
            display: block;
            margin-bottom: 8px;
        }

        input, textarea {
            width: 100%;
            padding: 12px;
            border: 1px solid #ccc;
            border-radius: 5px;
            font-size: 14px;
        }

        .file-input {
            border: none;
            cursor: pointer;
        }

        .location-container {
            display: flex;
            align-items: center;
            gap: 12px; /* Increased spacing between input and button */
        }

        .location-container input {
            flex: 1;
        }

        .live-location-btn {
            background: #007bff;
            color: white;
            border: none;
            padding: 12px;
            border-radius: 5px;
            cursor: pointer;
            font-size: 14px;
            white-space: nowrap;
            transition: background 0.3s ease;
        }

        .live-location-btn:hover {
            background: #0056b3;
        }

        .submit-container {
            text-align: center;
            margin-top: 20px; /* Increased spacing before submit button */
        }

        .submit-btn {
            width: 100%;
            background: green;
            color: white;
            border: none;
            padding: 14px;
            border-radius: 5px;
            cursor: pointer;
            font-size: 16px;
            font-weight: bold;
            transition: background 0.3s ease;
        }

        .submit-btn:hover {
            background: darkgreen;
        }

        @media (max-width: 480px) {
            .form-container {
                padding: 20px;
                width: 90%;
                max-width: 320px;
            }

            h2 {
                font-size: 20px;
            }

            input, textarea {
                font-size: 12px;
                padding: 8px;
            }

            .live-location-btn, .submit-btn {
                font-size: 14px;
                padding: 10px;
            }
        }
    </style>
</head>
<body>

    <div class="form-container">
        <h2>Report Garbage Area</h2>
        <form action="/home/fillcomplain" method="post"  enctype="multipart/form-data" >
            
            <div class="form-group">
                <label for="name">Your Name</label>
                <input type="text" id="name" name="Name" placeholder="Enter your name" required>
            </div>

            <div class="form-group">
                <label for="location">Location</label>
                <div class="location-container">
                    <input type="text" id="location" name="Location" placeholder="Enter location" required>
                    <button type="button" class="live-location-btn" onclick="getLocation()">Live Location</button>
                </div>
            </div>

            <div class="form-group">
                <label for="photo">Upload Photo</label>
                <input type="file" id="photo" name="Image" class="file-input" accept="image/*">
            </div>

            <div class="submit-container">
                <button type="submit" class="submit-btn"> Submit Report</button>
            </div>

        </form>
    </div>

    <script>
        function getLocation() {
            if (navigator.geolocation) {
                navigator.geolocation.getCurrentPosition((position) => {
                    let lat = position.coords.latitude;
                    let lon = position.coords.longitude;
                    document.getElementById('location').value = `Lat: ${lat}, Lon: ${lon}`;
                }, () => {
                    alert("Unable to retrieve your location. Please allow location access.");
                });
            } else {
                alert("Geolocation is not supported by this browser.");
            }
        }
    </script>

</body>
</html>